<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" /> 

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/timeCounterTextView"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="01:33"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical">
            
           <TextView
            android:id="@+id/quizPositionTextView"
            android:text="Question  1/6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"/>

               <TextView
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/questionTextView"
                android:text="Business finance can come from either internal or external sources. Which of the following is an internal source of finance?"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"/>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionARadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionATextView"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="An overdraft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

              <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionBRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionBTextView"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="A loan from a bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

              <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionCRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionCTextView"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Selling assets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

              <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionDRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionDTextView"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="A stcok market floatation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="0.25">

            <Button
					android:layout_centerHorizontal="true"
					android:layout_alignParentBottom="true"
					android:layout_marginBottom="40dp"
					android:id="@+id/proceedQuizButton"
					android:text="Proceed"
					android:textStyle="bold"
					android:layout_height="40dp"
					android:layout_width="200dp"
					android:textColor="@color/white"
					android:textAllCaps="false"
					android:background="@drawable/roundbutton"/>

        </RelativeLayout>

      </LinearLayout>

</LinearLayout>
